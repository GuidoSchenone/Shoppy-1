{% assign color_bg = settings.color_bg | default: '#fff' %}
{% assign color_text = settings.color_text | default: '#111' %}
{% assign color_border = settings.color_border | default: '#e5e5e5' %}
{% assign radius = settings.border_radius | default: '12px' %}
{% assign shadow = settings.shadow | default: '0 10px 30px rgba(0,0,0,0.1)' %}

.quick-add {
  position: relative;
  z-index: 1;
  margin: 0 0 1rem;
}

.quick-add-modal {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.quick-add-modal[open] {
  display: block;
  opacity: 1;
}

.quick-add-modal__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.95);
  width: 90%;
  max-width: 980px;
  max-height: 90vh;
  background: {{ color_bg }};
  border-radius: {{ radius }};
  box-shadow: {{ shadow }};
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease;
}

.quick-add-modal[open] .quick-add-modal__content {
  transform: translate(-50%, -50%) scale(1);
}

.quick-add-modal__content-info {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  padding: 2rem;
  overflow-y: auto;
  max-height: 80vh;
}

.quick-add-modal__toggle {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: {{ color_bg }};
  border: 1px solid {{ color_border }};
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 10;
  transition: background 0.2s ease;
}

.quick-add-modal__toggle:hover {
  background: #f5f5f5;
}

.quick-add-modal__toggle svg {
  width: 20px;
  height: 20px;
  stroke: {{ color_text }};
}

.quick-add-modal .product__media-item:not(:first-child),
.quick-add-modal .product__modal-opener:not(.product__modal-opener--image),
.quick-add-modal .quick-add-hidden {
  display: none !important;
}

.quick-add-modal .product-form__buttons {
  max-width: 100%;
}

.quick-add__submit {
  width: 100%;
  padding: 0.75rem;
  font-size: 1rem;
  font-weight: 500;
  background: {{ color_text }};
  color: {{ color_bg }};
  border: none;
  border-radius: {{ radius }};
  cursor: pointer;
  transition: background 0.2s ease;
}

.quick-add__submit:hover {
  background: #333;
}

@media (max-width: 767px) {
  .quick-add-modal__content {
    width: 100%;
    height: 100%;
    max-width: none;
    max-height: none;
    border-radius: 0;
    top: 0;
    left: 0;
    transform: none;
  }

  .quick-add-modal__content-info {
    padding: 1.5rem;
  }
}
